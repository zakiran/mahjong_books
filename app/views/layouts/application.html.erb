<!DOCTYPE html>
<html>

<head>
  <title>麻雀戦術本</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track'=> true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track'=> true %>
  <%= csrf_meta_tags %>
</head>

<body>
  <header class="navbar navbar-default" role="navigation">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to '麻雀戦術本', root_path, class: 'navbar-brand' %>
      </div>
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to 'Top', root_path %></li>
          <li><%= link_to '新着', list_new_path %></li>
          <li><%= link_to '一覧', list_all_path %></li>
          <li><%= link_to 'おすすめ', root_path %></li>
          <li>
            <a href="#" data-toggle="dropdown">
              ジャンル<span class="caret"></span>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to '初心者向け', list_beginner_path %></li>
              <li><%= link_to '点数計算', list_score_path %></li>
              <li><%= link_to 'kindle', list_kindle_path %></li>
            </ul>
          </li>
          <li>
            <a href="#" data-toggle="dropdown">
              プロ団体別<span class="caret"></span>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to '日本プロ麻雀協会', list_kyoukai_path %></li>
              <li><%= link_to '最高位戦日本プロ麻雀協会', list_saikouisen_path %></li>
              <li><%= link_to '麻将連合μ', list_myu_path %></li>
              <li><%= link_to 'RMU', list_rmu_path %></li>
              <li><%= link_to '日本プロ麻雀連盟', list_renmei_path %></li>
              <li><%= link_to 'その他', list_others_path %></li>
            </ul>
          </li>
        </ul>
      </div>
    </div>
  </header>

  <div class="container">

    <%= yield %>

  </div>

</body>

</html>
